{{!-- /app/templates/sign-in.hbs --}}

<header>

  <div class="login-container container">
    <div class="row">
      
          <div class="wallet col-md-4">
          <img src="assets/image/credit35.png" alt="">
        </div>
      <div class="login col-md-8">
    
            <form {{ action "authenticate" on="submit"}} role= "form">
            <h2><span class="kf">Millionaire Labs </span></h2>
              {{input type= "text" id="input" class="form-control" placeholder="User Email" value=userEmail}}
              {{input type="password" class="form-control" placeholder="Password" value=password}}
              <button class="btn btn-primary btn-md" type="submit"><span class="kf">Sign In</span> </button>
              <br>
              <br>
              {{#link-to 'landingPage.signUp'}}Not in the lab? Register now{{/link-to}}
              
          </form>
        </div>
      </div>
    </div>


</header>